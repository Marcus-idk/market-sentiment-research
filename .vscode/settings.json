{
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/.hypothesis": true,
    "**/.venv": true,
    "**/.claude": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/.coverage": true,
    "**/htmlcov": true,
    "**/.factory": true
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "files.eol": "\n",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true
  },
  "ruff.nativeServer": "on"
}